@page
@model MyApp.Namespace.CreateMigranteModel
@{
    ViewData["Title"] = "Crear Migrante";
}

<head>
    <title>Registro de Migrantes</title>
    <link rel="stylesheet" href="Empresa.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
   
  </head>
  <body>
    
    <div class="main-block">
      <div class="left-part">       
        <i class="fas fa-user-astronaut"></i>  
        <div class="contenedor">
          <IMG class="resize" SRC="ER_background.jpg"  ALIGN=LEFT HSPACE=100 VSPACE=30>
          
         
          <div class="texto-debajo">
            <h1>Equipo rocket</h1> 
          </div>
         
        </div>  
                       
      </div>
      
      <form  method="post" >
        <div class="title">
          <i class="fas fa-pencil-alt"></i> 
          <h2>Registro Informacion Personal</h2>
        </div>
        <div class="info">
          <input asp-for="migrante.Nombre" class="name" type="text" name="Nombre" placeholder="Nombre">
          <input asp-for="migrante.Apellidos" type="text" name="Apellidos" placeholder="Apellidos">
          <input asp-for="migrante.TipoDocumento" type="number" name="TipoDocumento" placeholder="Tipo de Documento">
          <input asp-for="migrante.Documento" type="text" name="Documento" placeholder="Numero de documento de identificacion">
          <input asp-for="migrante.Pais" type="text" name="Pais" placeholder="Pais de origen">
          <input asp-for="migrante.FechaNacimiento" type="text" name="FechaNacimiento" placeholder="Fecha de nacimiento">
          <input asp-for="migrante.Correo" type="text" name="Correo" placeholder="Direccion electronica">
          <input asp-for="migrante.Telefono" type="text" name="Telefono" placeholder="Numero de telefono">
          <input asp-for="migrante.Direccion" type="text" name="Direccion" placeholder="Direccion actual">
          <input asp-for="migrante.Ciudad" type="text" name="Ciudad" placeholder="Ciudad">
          <input asp-for="migrante.SituacionLaboral" type="text" name="Situacion" placeholder="Situacion laboral">
             

        <div class="btn-group" align="center">         
          <input type="submit" value="Crear" class="btn btn-dark" />
        </div>
      </form>
    </div>
    @* <div><a class="btn btn-dark" asp-page="./List"><i class="fas fa-angle-double-left"></i></a></div>     *@
  </body> 

